            <div id = "contents"> <!-- 셀렉트 바 옆에 내용들-->
    
                <div id = "cityNameDay">
                    <!-- <h2 id = "cityName">Rome</h2> -->

                    <div id = "citySelect">
                        <select id = "city" class="form-select">
                            <option value = "Rome">로마</option>
                            <option value = "Milan">밀라노</option>
                            <option value = "Napoli">나폴리</option>
